<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".SetUpProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/profile_setup"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#030E32"
        app:drawableStartCompat="@drawable/profile_setup_top_icon" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="20dp"
       android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/linear_bg_drawable">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:text="@string/personalize_your_agetric_experience"
          android:textSize="24sp"
          android:textAlignment="center"
          android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_your_name_and_photo_to_make_agetric_truly_yours"
                android:textAlignment="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:alpha="0.8"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/user_profile_upload"
                android:layout_marginTop="20dp"
                app:civ_border_color="@color/faded_blue"
                app:civ_border_width="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_here_to_change_photo"
                android:textAlignment="center"
                android:layout_margin="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:hintTextColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:boxStrokeColor="@color/faded_blue"
                app:boxStrokeErrorColor="#FC0101"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:textColor="@color/faded_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_your_full_name"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
       <com.google.android.material.button.MaterialButton
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="30dp"
           android:backgroundTint="@color/faded_blue"
           android:text="@string/save_continue"
           android:textColor="@color/white"
           android:textSize="20sp"
           android:letterSpacing="0.07"/>

   </LinearLayout>



</LinearLayout>